<project name="IGV" default="all" basedir=".">

    <!-- Properties-->
    <property name="jar.name" value="igv.jar"/>

    <!-- Source and lib directories -->
    <property name="src.dir" value="${basedir}/src/"/>
    <property name="lib.dir" value="${basedir}/lib/"/>
    <property name="testsrc.dir" value="${basedir}/test/src"/>
    <property name="testlib.dir" value="${basedir}/test/lib"/>

    <!-- Temp directory.  Sources are compiled here prior to archiving -->
    <property name="tmp.dir" value="${basedir}/tmp/"/>
    <property name="testtmp.dir" value="${basedir}/testtmp/"/>
    <property name="resource.dir" value="${tmp.dir}resources/"/>

    <!-- Distribution directory.  Binary distribution is placed here -->
    <property name="jar.path" value="${tmp.dir}${jar.name}"/>

    <!-- build specific properties.  -->
    <property name="build-number" value="0"/>
    <property name="version" value="${build-number}"/>
    <property name="data-server-url" value="http://www.broadinstitute.org/igvdata/$$_dataServerRegistry.txt"/>

    <!-- Create class path for manifest -->
    <path id="@jars">

        <pathelement path="${lib.dir}AbsoluteLayout.jar"/>
        <pathelement path="${lib.dir}batik-bridge.jar"/>
        <pathelement path="${lib.dir}batik-codec.jar"/>
        <pathelement path="${lib.dir}batik-awt-util.jar"/>
        <pathelement path="${lib.dir}batik-css.jar"/>
        <pathelement path="${lib.dir}batik-dom.jar"/>
        <pathelement path="${lib.dir}batik-ext.jar"/>
        <pathelement path="${lib.dir}batik-gui-util.jar"/>
        <pathelement path="${lib.dir}batik-gvt.jar"/>
        <pathelement path="${lib.dir}batik-parser.jar"/>
        <pathelement path="${lib.dir}batik-svg-dom.jar"/>
        <pathelement path="${lib.dir}batik-svggen.jar"/>
        <pathelement path="${lib.dir}batik-transcoder.jar"/>
        <pathelement path="${lib.dir}batik-util.jar"/>
        <pathelement path="${lib.dir}batik-xml.jar"/>
        <pathelement path="${lib.dir}commons-logging-1.1.1.jar"/>
        <pathelement path="${lib.dir}commons-math-2.2.jar"/>
        <pathelement path="${lib.dir}concurrent.jar"/>
        <pathelement path="${lib.dir}goby-io-igv.jar"/>
        <pathelement path="${lib.dir}jargs.jar"/>
        <pathelement path="${lib.dir}jide-action.jar"/>
        <pathelement path="${lib.dir}jide-common.jar"/>
        <pathelement path="${lib.dir}jide-components.jar"/>
        <pathelement path="${lib.dir}jide-dialogs.jar"/>
        <pathelement path="${lib.dir}jide-dock.jar"/>
        <pathelement path="${lib.dir}jide-grids.jar"/>
        <pathelement path="${lib.dir}jgrapht-jdk1.6.jar"/>
        <pathelement path="${lib.dir}jlfgr-1_0.jar"/>
        <pathelement path="${lib.dir}junit-4.5.jar"/>
        <pathelement path="${lib.dir}log4j-1.2.15.jar"/>
        <pathelement path="${lib.dir}mysql-connector-java-3.1.14-bin.jar"/>
        <pathelement path="${lib.dir}sam-1.61.jar"/>
        <pathelement path="${lib.dir}swing-layout-1.0.jar"/>
        <pathelement path="${lib.dir}tribble-0.1.jar"/>
        <pathelement path="${lib.dir}vcf.jar"/>
        <pathelement path="${lib.dir}xml-apis-ext-1.3.04"/>
        <pathelement path="${lib.dir}xml-apis-1.3.04.jar"/>
        <pathelement path="${lib.dir}Jama-1.0.2.jar"/>
        <pathelement path="${lib.dir}jcommon-1.0.16.jar"/>
        <pathelement path="${lib.dir}jfreechart-1.0.13.jar"/>
        <pathelement path="${lib.dir}commons-httpclient-3.1.jar"/>
    </path>

    <!-- Clean all generated artifacts -->
    <target name="clean">
        <delete dir="${tmp.dir}"/>

        <delete dir="${testtmp.dir}"/>
        <delete dir="${test.reports}"/>
    </target>


    <target name="init" depends="clean">

        <mkdir dir="${tmp.dir}"/>

        <mkdir dir="${testtmp.dir}"/>
        <mkdir dir="${test.reports}"/>

        <!-- Copy resource files to the tmp directory -->
        <copy todir="${tmp.dir}" overwrite="true">
            <fileset dir="${src.dir}">
                <exclude name="**/*.form"/>
                <exclude name="**/*.java"/>
                <exclude name="**/*.svn"/>
                <exclude name="**/manifest.mf"/>
            </fileset>
        </copy>

        <pathconvert property="class-path" pathsep=" " dirsep="/" refid="@jars">
            <map from="${lib.dir}" to="lib/"/>
        </pathconvert>

        <tstamp>
            <format property="timestamp" pattern="MM/dd/yyyy hh:mm aa"/>
        </tstamp>
        <echo message="Resource ${resource.dir}"/>
        <echo message="Version ${version}"/>
        <replace file="${resource.dir}about.properties" token="@VERSION" value="${version}"/>
        <replace file="${resource.dir}about.properties" token="@BUILD" value="${build-number}"/>
        <replace file="${resource.dir}about.properties" token="@TIMESTAMP" value="${timestamp}"/>
        <replace file="${resource.dir}about.properties" token="@DEFAULT_MASTER_RESOURCE_URL"
                 value="${data-server-url}"/>

    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" debug="on" destdir="${tmp.dir}" includeantruntime="true">
            <classpath refid="@jars"/>
        </javac>
        <javac srcdir="${testsrc.dir}" debug="on" destdir="${testtmp.dir}" includeantruntime="true">
            <classpath refid="test.classpath"/>
        </javac>
    </target>

    <target name="build" depends="compile">
        <jar destfile="${basedir}/${jar.name}" basedir="${tmp.dir}">

            <manifest>
                <attribute name="Class-Path" value="${class-path}"/>
                <attribute name="Built-By" value="${user.name}"/>
                <attribute name="Main-Class" value="org.broad.igv.ui.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="all" depends="build, clean"/>

    <!-- Run all tests with ant. Work in progress. -->
    <path id="test.classpath">
        <path refid="@jars"/>
        <pathelement location="${testtmp.dir}"/>
        <pathelement location="${tmp.dir}"/>
    </path>

    <property name="test.reports" value="${basedir}/reports"/>
    <property name="LARGE_DATA_DIR" value="${basedir}/test/largedata"/>
    <property name="testsfailed" value="0"/>
    <target name="alltests" depends="compile">
        <junit haltonfailure="no" showoutput="no" printsummary="yes" failureproperty="testsfailed" maxmemory="512m">
            <jvmarg value="-javaagent:${testlib.dir}/RuntimeUtils.jar"/>
            <sysproperty key="LARGE_DATA_DIR" value="${LARGE_DATA_DIR}"/>
            <classpath refid="test.classpath"/>
            <formatter type="xml" usefile="true"/>
            <batchtest fork="yes" todir="${test.reports}">
                <fileset dir="${testtmp.dir}">
                    <include name="**/Array*.class"/>
                    <exclude name="**/*$*.class"/>
                </fileset>
            </batchtest>
        </junit>

        <junitreport todir="${test.reports}">
            <fileset dir="${test.reports}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report todir="${test.reports}"/>
        </junitreport>
    </target>


</project>
